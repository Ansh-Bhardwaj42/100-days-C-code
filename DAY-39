/*Q77: Check if the elements on the diagonal of a matrix are distinct.*/

#include <stdio.h>
int main() {
    int arr[10][10];
    int rows, cols, i, j, isDistinct = 1;

    printf("Enter number of rows: ");
    scanf("%d", &rows);
    printf("Enter number of columns: ");
    scanf("%d", &cols);

    if(rows != cols) {
        printf("Matrix is not square, cannot check diagonal.\n");
        return 0;
    }

    printf("Enter elements of the matrix:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    for(i = 0; i < rows; i++) {
        for(j = i + 1; j < cols; j++) {
            if(arr[i][i] == arr[j][j]) { // compare diagonal elements
                isDistinct = 0;
                break;
            }
        }
        if(isDistinct == 0) break;
    }

    if(isDistinct)
        printf("Diagonal elements are distinct.\n");
    else
        printf("Diagonal elements are not distinct.\n");
    return 0;
}



/*Q78: Find the sum of main diagonal elements for a square matrix.
*/

#include <stdio.h>
int main() {
    int arr[10][10];
    int n, i, j, sum = 0;

    printf("Enter the size of the square matrix: ");
    scanf("%d", &n);

    printf("Enter elements of the matrix:\n");
    for(i = 0; i < n; i++) {
        for(j = 0; j < n; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    for(i = 0; i < n; i++) {
        sum += arr[i][i]; // main diagonal: row index = column index
    }

    printf("Sum of main diagonal elements = %d\n", sum);
    return 0;
}
