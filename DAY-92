/*Q142: Store details of 5 students in an array of structures and print all.*/

#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    struct Student s[5];   // array of 5 students
    int i;

    // Input
    for(i = 0; i < 5; i++) {
        printf("Enter details of student %d:\n", i + 1);

        printf("Name: ");
        scanf("%s", s[i].name);   // takes single word name

        printf("Roll: ");
        scanf("%d", &s[i].roll);

        printf("Marks: ");
        scanf("%f", &s[i].marks);

        printf("\n");
    }

    // Output
    printf("Name\tRoll\tMarks\n");
    printf("----------------------------\n");

    for(i = 0; i < 5; i++) {
        printf("%s\t%d\t%.0f\n", s[i].name, s[i].roll, s[i].marks);
    }

    return 0;
}
