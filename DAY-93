/*Q143: Find and print the student with the highest marks.*/

#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    int n = 3;   // given in question
    struct Student s[3];
    int i, topIndex = 0;

    // Input for 3 students
    for(i = 0; i < n; i++) {
        printf("Enter details of student %d:\n", i + 1);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Roll: ");
        scanf("%d", &s[i].roll);

        printf("Marks: ");
        scanf("%f", &s[i].marks);

        printf("\n");
    }

    // Finding topper
    for(i = 1; i < n; i++) {
        if(s[i].marks > s[topIndex].marks) {
            topIndex = i;
        }
    }

    // Output
    printf("Topper: %s (Marks: %.0f)\n", s[topIndex].name, s[topIndex].marks);

    return 0;
}
